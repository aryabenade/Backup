  startDate        DateTime
  preferredDays    String
  petType          String
  petName          String
  petBreed         String
  petGender        String
  petSize          String
  petAggression    String
  petAge           String
  city             String
  address          String
  packageTitle     String
  packagePrice     String
  status           String   @default("Scheduled")
  userId           String
  sessionsPerWeek  Int      // New field
  sessionsCompleted Int     @default(0) // New field
